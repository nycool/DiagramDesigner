<Window
    x:Class="WpfApp3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:DiagramDesigner.Custom;assembly=DiagramDesigner"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button
                Width="100"
                Margin="6"
                Command="{Binding SaveCommand}"
                Content="Save" />
            <Button
                Width="100"
                Margin="6"
                Command="{Binding OpenCommand}"
                Content="Open" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  ToolBox Control  -->
            <custom:ToolBox Grid.Column="0" ToolBoxItemsSource="{Binding ToolBoxItems}" />

            <GridSplitter
                Grid.Column="1"
                Width="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="Transparent" />

            <!--  Diagram Control  -->
            <custom:DiagramView
                Grid.Column="2"
                Margin="3,1,0,0"
                DiagramItemsSource="{Binding ItemsSource}" />
        </Grid>
    </Grid>
</Window>
