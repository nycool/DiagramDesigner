<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfApp3="clr-namespace:WpfApp3">


    <!--  DataTemplate for DesignerCanvas look and feel  -->
    <DataTemplate DataType="{x:Type wpfApp3:PersistDesignerItemViewModel}">
        <Grid>
            <Image
                Focusable="True"
                IsHitTestVisible="False"
                Source="../Images/Persist.png"
                Stretch="Fill"
                Tag="setting" />
            <Button
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Template="{StaticResource InfoButtonTemplate}" />
        </Grid>
    </DataTemplate>

